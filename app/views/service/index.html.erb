<%# <%= javascript_include_tag "./UI/index.js" %> 

<div id="bodyWrapper" class="bg-white">
    <div id="serviceContainer" class="w-11/12 mx-auto flex-wrap md:flex justify-evenly p-4 center">
        <div id="requestsBody" class="lg:w-5/12  w-5/6">

            <!-- 保存に失敗したらエラーメッセージを表示 -->
            <div class="bg-gray-100 rounded-lg border-2 border-gray-500 mx-2 my-4 p-2">
                <p class="font-sans font-medium text-2xl">Create A New Request</p>
    
                <% if flash[:error_messages] %>
                    <div class="text-red-500">
                        <ul>
                            <% flash[:error_messages].each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>

                <!-- 保存に成功したらメッセージを表示 -->
                <% if flash[:notice] %>
                    <div>
                        <%= flash[:notice] %>
                    </div>
                <% end %>

                <div class="m-2">
                    <%= form_with model: @request do |f| %>
                        <div class="rounded-md shadow-sm -space-y-px">
                        </div>

                        <div class="">
                            <%= f.label :title, 'Title', class: 'sr-only' %>
                            <%= f.text_field :title, class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'Title:' %>
                        </div>
                        <div class="">
                            <%= f.label :message, 'Message', class: 'sr-only' %>
                            <%= f.text_area :message, rows: 5, class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'Message:' %>
                        </div>
                        <div class="flex-wrap justify-between m-2 xl:flex">
                            <div class="">
                                <%= f.label :image, '画像', class: 'クラスを設定' %>
                                <%= f.file_field :image, class: 'w-36 lg:w-64'  %>
                            </div>
                            <div class="">
                            <%= f.submit 'Send', class: 'm-2 py-2 px-4 font-semibold rounded-lg shadow-md border-2 border-black text-black bg-white hover:bg-gray-100' %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class="rounded-lg border-2 border-gray-500 bg-gray-100 mx-2 my-4 p-2">
                <p  class="font-sans font-medium text-2xl">Request List</p>
                <% @requests.each do |request|%>
                    <div data-index=<%= request.id %> data-title="<%= request.title %>" data-message="<%= request.message %>"
                    class="requestCardButton h-auto cursor-pointer shadow-md bg-white rounded-lg mx-2 my-4 flex justify-start">

                        <div class="left-0 w-32 h-32 min-h-full">
                            <div class="w-32 h-32 rounded-l-lg">
                                <% request_image_path = "public/request_images/#{request.id}_#{request.image}" %>
                                <% if File.exist?(request_image_path) %>
                                    <%= image_tag "/request_images/#{request.id}_#{request.image.force_encoding("UTF-8")}", class: "w-32 h-32 object-cover rounded-l-lg" %>
                                <% else %>
                                    <%= image_tag "/request_images/no_image.png", class: "w-32 h-32 object-cover rounded-l-lg" %>
                                <% end %>
                            </div>
                        </div>
                        <div class="flex flex-col flex-grow justify-between w-max-full">
                            <div class="m-2">
                                <div class="overflow-hidden font-bold text-lg w-auto"><%= request.title %></div>
                                <div class="break-all text-base text-gray-700 h-auto"><%= request.message %></div>
                            </div>
                            <%# <div class="mt-auto flex flex-row">
                                <input type="button" value="Accept" 
                                onclick="document.getElementById( 'task_request_id' ).value = '<%= request.id '; document.getElementById( 'task_isAccepted' ).value = '1'; document.getElementById( 'confirmation_message' ).innerHTML = 'Are you accept this request?';" >
                                <input type="button" value="Reject" 
                                onclick="document.getElementById( 'task_request_id' ).value = '<%= request.id '; document.getElementById( 'task_isAccepted' ).value = '0'; document.getElementById( 'confirmation_message' ).innerHTML = 'Are you reject this request?';" >
                            </div> %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>


        <div id="rightContainer" class="lg:w-5/12  w-5/6">
            <div class="rounded-lg border-2 border-gray-500 bg-gray-100  mx-2 my-4 p-2">
                <%# <hr> %>
                <p  class="font-sans font-medium text-2xl">Accepted List</p>
                <% @tasks.each do |task| %>
                    <div id="acceptedList", class="flex flex-col h-64 bg-white mx-2 my-4 rounded-lg shadow-md">
                        <div class="h-32 rounded-t-lg flex justify-start border-b-2">
                            <div class="left-0 w-32 h-32">
                                <div class="w-32 h-32 bg-blue-300 rounded-tl-lg">
                                    <% task_image_path = "public/request_images/#{task.request.id}_#{task.request.image}" %>
                                    <% if File.exist?(task_image_path) %>
                                        <%= image_tag "/request_images/#{task.request.id}_#{task.request.image.force_encoding("UTF-8")}", class: "w-32 h-32 object-cover rounded-tl-lg" %>
                                    <% else %>
                                        <%= image_tag "/request_images/no_image.png", class: "w-32 h-32 object-cover rounded-tl-lg" %>
                                    <% end %>
                                </div>
                            </div>
                            <div class="flex flex-col flex-grow justify-between truncate">
                                <div class="m-2">
                                    <div class="truncate font-bold text-lg w-max"><%= task.request.title %></div>
                                    <div class="break-word text-base text-gray-700"><%= task.request.message %></div>
                                </div>
                            </div>
                        </div>

                        <div class="m-2">
                            <div class="flex justify-between">
                                <div class="my-auto font-bold text-lg inset-y-0">承認理由</div>
                                <div>
                                    <div class="inline-block align-middle rounded-full h-12 w-12 bg-red-100"><%= task.host_user.image %></div>
                                    <div class="inline-block align-middle font-bold text-lg w-max mx-2"><%= task.host_user.position %></div>
                                </div>
                            </div>
                            <div>
                                <%= task.comment %>
                            </div>
                        </div>
                        <div class="mt-auto flex flex-row">
                            <input type="button" value="Done" 
                            onclick="document.getElementById( 'complete_form' ).action = '/tasks/<%= task.id %>'; document.getElementById( 'task_request_id' ).value = '<%= task.request.id %>'; document.getElementById( 'task_isDone' ).value = '1';" 
                            class="h-8 py-1 px-4 flex-1 font-semibold text-l shadow-md rounded-bl-lg text-white bg-green-500 hover:bg-green-700">
                            <%= link_to "Cancel", task, method: :delete, class: "h-8 py-1 px-4 flex-1 text-center font-semibold text-l shadow-md rounded-br-lg text-white bg-red-500 hover:bg-red-700" %>
                        </div>
                    </div>

                <% end %>
            </div>


            <div id="transitionButtons" class="flex justify-evenly my-4">
                <button onclick="location.href='/tasks/rejected'" class="w-1/3 py-2 px-4 font-semibold text-2xl rounded-lg shadow-md text-white bg-red-500 hover:bg-red-700">Rejected<br>requests</button>
                <button onclick="location.href='/tasks/done'" class="w-1/3 py-2 px-4 font-semibold text-2xl  rounded-lg shadow-md text-white bg-green-500 hover:bg-green-700">Completed<br>tasks</button>
            </div>


            
            <!-- 完了フォーム -->
            <div class="bg-gray-100 rounded-lg border-2 border-gray-500 mx-2 my-4 p-2">
                <p class="font-sans font-medium text-2xl">Have you completed this task?</p>
                <div class="m-2">
                    <%= form_with model: @task, id: "complete_form", method: 'patch' do |f| %>
                        <div class="">
                            <%= f.hidden_field :request_id %>
                            <%= f.hidden_field :isDone %>
                            <%= f.hidden_field :host_user_id, value: 1 %>
                        </div>
                        <div class="">
                            <%= f.label :comment, 'Comment', class: 'sr-only' %>
                            <%= f.text_area :comment, rows: 5,  class: 'appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'Comment:' %>
                        </div>
                        <div class="">
                            <%= f.submit 'Send', class: 'm-2 py-2 px-4 font-semibold rounded-lg shadow-md border-2 border-black text-black bg-white hover:bg-gray-100' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div> 
    </div>

    <div id="popupRequestForm" class="hidden fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div id="js-black-bg" class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                            <!-- Heroicon name: outline/exclamation -->
                            <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                            <h1 id="requestCheckFormTitle" class="text-lg leading-6 font-medium text-black align-middle" id="modal-title">
                                <%# <% @requests.find() %>
                                title
                            </h1>
                        </div>
                    </div>

                    <div>
                        <img id="requestCheckFormImg" src="/request_images/no_image.png" class="max-w-full max-h-full h-64 my-2 mx-auto object-contain">
                        <div class="mt-2">
                            <p id="requestCheckFormMessage" class="text-gray-700">
                                message
                            </p>
                        </div>
                    </div>
                </div>

                <div class="m-4">
                    <%= form_with model: @task do |f| %>
                        <div class="">
                            <%= f.hidden_field :request_id, {id: "checkFormRequest_id"} %>
                            <%= f.hidden_field :isAccepted %>
                            <%= f.hidden_field :host_user_id, value: 1 %>
                        </div>
                        <p>理由:</p>
                        <div class="">
                            <%= f.label :comment, 'Comment', class: 'sr-only' %>
                            <%= f.text_area :comment, rows: 5, class: 'appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'Comment:' %>
                        </div>

                        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                            <button type="button" id="hideCheckPopup" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                            Cancel
                            </button>
                            <%= f.submit 'Reject', id: "rejectButton", class: 'w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 sm:ml-3 sm:w-auto sm:text-sm' %>
                            <%= f.submit 'Accept', id: "acceptButton", class: 'w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white hover:bg-green-700 sm:ml-3 sm:w-auto sm:text-sm' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

</div>
